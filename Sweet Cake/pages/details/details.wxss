.detail{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: #f4f4f4;
}
.img-header{
  width: 100%;
  background-color: #fff;
}

.banner{
  width: 100%;
  background-color: #fff;
  position: relative;
  height: 680rpx;
}

.swiper{
	width: 750rpx;
    height: 680rpx
}
.swiper-img {
	width: 750rpx;
	margin: 0;
	padding: 0;
	vertical-align: bottom;
}

.banner-current {
	position: absolute;
	right: 24rpx;
	bottom: 20rpx;
	color: #fff;
	font-size: 30rpx;
	width: 57rpx;
