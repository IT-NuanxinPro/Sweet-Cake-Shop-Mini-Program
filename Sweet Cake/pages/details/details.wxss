  height: 80rpx;
  margin: 12rpx auto;
  background-color: #fff;
  font-size: 20rpx;
  padding: 16rpx;
}
.coupon-left{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
/* 优惠卷 */
.fillMoney{
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 40rpx;
  width: 140rpx;
  color: #ff5e60;
  border: 2rpx solid #ff5e60;
  margin: auto 10rpx;
}
.dot-left,.dot-right {
  display: block;
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background: #fff;
  position: absolute;
  z-index: 999;
}
.dot-left {
  bottom: 6px;
  left: -6px;
  border-right:2rpx solid#ff5e60;
}
.dot-right {
  bottom: 6px;
  right: -6px;
  border-left: 2rpx solid#ff5e60;
}
.xiangyou{
  width: 46rpx;
  height: 46rpx;
}


