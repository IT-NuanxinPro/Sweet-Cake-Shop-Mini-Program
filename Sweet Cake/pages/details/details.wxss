.footer_money_num{
  margin-top:-7rpx;
}

.price-desc{
  font-size: 23rpx;
  font-weight: bold;
}

.price-discount{
  font-size: 32rpx;
  font-weight: bold;
}


.footer-title-con{
  margin-top: 10rpx;
  text-indent: 8rpx;
  color: #000;
}

.tag_text{
  margin-left: 10rpx;
  text-align: center;
  transform: translateY(-4rpx);
}


.share-img{
  position: absolute;
  right: 18rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
