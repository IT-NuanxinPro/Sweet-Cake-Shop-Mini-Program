/* 搜索历史 */

.search-history{
  padding: 20rpx;
  box-sizing: border-box;
}

.search-history-title{
  display: flex;
  justify-content: space-between;
  font-size: 29rpx;
  color:#363636;
}

.search-history-content{
  display: flex;
  flex-wrap: wrap;
  margin-top: 24rpx;
}

.search-history-item{
  flex-shrink: 0;
  margin-top: 16rpx;
  margin-right: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 16rpx;
  background-color: #f5f5f5;
  box-shadow: 0px 0px 8px rgba(0,0,0,0.15);
}
.search-btn{
  margin-top: -14rpx;
}

/* 搜索发现 */

.search-found{
  padding: 24rpx 20rpx;
  box-sizing: border-box;
}

.search-found-title{
  display: flex;
  justify-content: space-between;
  font-size: 29rpx;
  color:#363636;
}

.search-found-content{
  display: flex;
  flex-wrap: wrap;
  margin-top: 24rpx;
}

.search-found-item-title{
  flex-shrink: 0;
  margin-top: 16rpx;
  margin-right: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 16rpx;
  background-color: #f5f5f5;
  box-shadow: 0px 0px 8px rgba(0,0,0,0.15);
}


