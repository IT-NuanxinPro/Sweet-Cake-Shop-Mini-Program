/* pages/editaddress/editaddress.wxss */
page{
  background-color: #f5f5f5;
}
.content{
  margin: 6rpx 20rpx;
  border-radius: 10rpx;
}
.label-txt{
  width: 130rpx;
  font-size: 26rpx;
  color: #333333;
}
.input-txt{
  font-size: 26rpx;
}
.input-placeholder{
  font-size: 26rpx;
  color: #cdcdcd;
}
.check-default{
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 20rpx;
  font-size: 24rpx;
}
.check-default icon {
  margin-right: 10rpx;
}
.add-address{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
}
.add-address .txt{
  width: 60vw;
  height: 75rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #ff6700;
  background-origin: 5rpx;
  font-size: 26rpx;
  color: #ff6700;
}



/* pages/editaddress/editaddress.wxss */
page{
  background-color: #f5f5f5;
}
.address-none{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80vh;
}
.none-content{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.none-content image{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}
.none-content .txt{
  font-size: 26rpx;
  color: #999;
}
.address-list{
  display: flex;
  flex-direction: column;
  margin-bottom: 95rpx;
}
.address-item{
  display: flex;
  flex-direction: column;
  margin: 6rpx 20rpx;
  padding: 20rpx 20rpx 10rpx 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
}
.item-top{
  font-size: 28rpx;
  color: #333;
}
.item-content{
  font-size: 24rpx;
  color: #999;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #dcdcdc;
}
.item-bottom{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}
.item-bottom .right{
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.item-bottom .right .txt{
  padding: 0 10rpx;
}

.add-address .txt{
  width: 60vw;
  height: 75rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #ff6700;
  background-origin: 5rpx;
  font-size: 26rpx;
  color: #ff6700;
} 